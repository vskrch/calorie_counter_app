# Security
ADMIN_CODE=change-this-admin-code
CODE_PEPPER=change-this-code-pepper
SECURITY_CONTENT_SECURITY_POLICY=

# SQLite path inside container/local runtime
APP_DB_PATH=/data/app.db

# AI provider keys
PERPLEXITY_API_KEY=
PERPLEXITY_MODEL=sonar-pro
PERPLEXITY_API_URL=https://api.perplexity.ai/chat/completions

# Optional: headless web automation mode (provider=perplexity_web)
PERPLEXITY_WEB_BASE_URL=https://www.perplexity.ai
PERPLEXITY_WEB_STORAGE_STATE_PATH=/data/perplexity_storage_state.json
PERPLEXITY_WEB_EMAIL=
PERPLEXITY_WEB_PASSWORD=
PERPLEXITY_WEB_HEADLESS=true
PERPLEXITY_WEB_TIMEOUT_MS=120000
PERPLEXITY_WEB_PROMPT=

OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.2-11b-vision-instruct:free
OPENROUTER_APP_URL=
OPENROUTER_APP_NAME=

# Rate limiting (per window)
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_AUTH_PER_WINDOW=20
RATE_LIMIT_ANALYZE_PER_WINDOW=12
RATE_LIMIT_ADMIN_PER_WINDOW=90
RATE_LIMIT_API_PER_WINDOW=240

# Frontend static export location used by FastAPI
FRONTEND_STATIC_DIR=/app/backend/app/static
